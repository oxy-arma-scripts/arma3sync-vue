{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "types": [
      "@intlify/unplugin-vue-i18n/messages",
      "@modyfi/vite-plugin-yaml/modules"
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
